{
  "name": "@haoqimao/tibox-cli",
  "version": "0.3.14",
  "description": "tibox",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "张博 <zbjumper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rm -rf lib && tsc --build",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --inspect-brk --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "pub": "yarn build && yarn publish --registry=https://registry.npmjs.com"
  },
  "bin": {
    "tibox": "./bin/tibox.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "@nodelib/fs.scandir": "^2.1.5",
    "@types/figlet": "^1.5.5",
    "@types/throttle-debounce": "^2.1.0",
    "cac": "^6.7.14",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "clear-console": "^1.1.0",
    "debug": "^4.3.4",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "esbuild": "^0.12.29",
    "figlet": "^1.5.2",
    "fs-extra": "^10.1.0",
    "git-rev-sync": "^3.0.2",
    "load-json-file": "^6.2.0",
    "lodash": "^4.17.21",
    "miniprogram-ci": "^1.8.35",
    "ora": "^5.4.1",
    "readline": "^1.3.0",
    "throttle-debounce": "^3.0.1",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/git-rev-sync": "^2.0.0",
    "@types/lodash": "^4.14.185",
    "@types/node": "*",
    "@types/npm": "^7.19.0",
    "@types/through2": "^2.0.36",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-define-config": "^1.1.2",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^2.7.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.8.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
