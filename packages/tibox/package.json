{
  "name": "@tibox/tibox-cli",
  "version": "0.1.1",
  "description": "tibox",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/src/index.d.ts",
  "author": "张博 <zbjumper@gmail.com>",
  "license": "MIT",
  "bin": {
    "tibox": "bin/tibox.js"
  },
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "build:comment": "构建",
    "build": "premove dist && pnpm build-bundle",
    "build-bundle": "rollup --config rollup.config.ts --configPlugin esbuild",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --inspect-brk --respawn --transpile-only src/index.ts",
    "typecheck:comment": "检查 typescript 的类型系统",
    "typecheck": "tsc --noEmit && tsc --noEmit -p src",
    "lint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "lint": "eslint --cache --ext .ts src/**",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "pub": "pnpm build && pnpm publish --access=public --registry=https://registry.npmjs.com"
  },
  "engines": {
    "node": "^18.0.0 || ^20.0.0 || >=22.0.0"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chokidar": "^3.5.3",
    "clear-console": "^1.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.25.4",
    "figlet": "^1.7.0",
    "git-rev-sync": "^3.0.2",
    "load-json-file": "^7.0.1",
    "lodash-es": "^4.17.21",
    "miniprogram-ci": "^2.0.0",
    "ora": "^8.2.0",
    "readline": "^1.3.0",
    "throttle-debounce": "^5.0.0",
    "through2": "^4.0.2"
  },
  "optionalDependencies": {
    "fsevents": "~2.3.3"
  },
  "devDependencies": {
    "@babel/parser": "^7.27.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.26.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/pluginutils": "^5.1.4",
    "@types/debug": "^4.1.12",
    "@types/figlet": "^1.5.8",
    "@types/git-rev-sync": "^2.0.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.12",
    "@types/npm": "^7.19.3",
    "@types/pnpapi": "^0.0.5",
    "@types/throttle-debounce": "^5.0.2",
    "@types/through2": "^2.0.41",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "cz-conventional-changelog": "^3.3.0",
    "debug": "^4.4.0",
    "dotenv-expand": "^12.0.0",
    "eslint": "^9.26.0",
    "eslint-plugin-import-x": "^4.11.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-regexp": "^2.7.0",
    "estree-walker": "^3.0.3",
    "globals": "^16.0.0",
    "magic-string": "^0.30.17",
    "mlly": "^1.7.4",
    "picocolors": "^1.1.1",
    "prettier": "^3.1.0",
    "resolve.exports": "^2.0.3",
    "rollup": "^4.40.2",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-license": "^3.6.0",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.32.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
