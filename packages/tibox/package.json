{
  "name": "@tibox/cli",
  "version": "0.0.0",
  "description": "tibox",
  "main": "index.js",
  "author": "张博 <zbjumper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:comment": "构建",
    "build": "npm run eslint && npm run prettier && rm -rf lib && tsc --build",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --inspect-brk --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz"
  },
  "bin": {
    "tibox": "./bin/tibox.js"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "clear-console": "^1.1.0",
    "commander": "^7.2.0",
    "inquirer": "^8.1.0",
    "lodash": "^4.17.21",
    "map-stream": "^0.0.7",
    "shelljs": "^0.8.4",
    "vinyl-fs": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/inquirer": "^7.3.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "*",
    "@types/shelljs": "^0.8.8",
    "@types/vinyl-fs": "^2.4.11",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.27.0",
    "prettier": "^2.3.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
