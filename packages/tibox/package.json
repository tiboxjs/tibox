{
  "name": "@haoqimao/tibox-cli",
  "version": "0.3.18",
  "description": "tibox",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "张博 <zbjumper@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:comment": "构建",
    "build": "pnpm run eslint && pnpm run prettier && rm -rf lib && tsc --build",
    "dev:comment": "启动开发环境",
    "dev": "ts-node-dev --inspect-brk --respawn --transpile-only src/index.ts",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .ts 的文件",
    "eslint": "eslint --fix src --ext .ts --max-warnings=0",
    "prettier:comment": "自动格式化 src 目录下的所有 .ts 文件",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "cz",
    "pub": "pnpm build && pnpm publish --registry=https://registry.npmjs.com"
  },
  "bin": {
    "tibox": "./bin/tibox.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@nodelib/fs.scandir": "^3.0.0",
    "cac": "^6.7.14",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.3",
    "clear-console": "^1.1.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "esbuild": "^0.19.8",
    "figlet": "^1.7.0",
    "fs-extra": "^11.1.1",
    "git-rev-sync": "^3.0.2",
    "load-json-file": "^7.0.1",
    "lodash": "^4.17.21",
    "miniprogram-ci": "^1.9.8",
    "ora": "^7.0.1",
    "readline": "^1.3.0",
    "throttle-debounce": "^5.0.0",
    "through2": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/debug": "^4.1.12",
    "@types/fs-extra": "^11.0.4",
    "@types/git-rev-sync": "^2.0.2",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/npm": "^7.19.3",
    "@types/through2": "^2.0.41",
    "@types/figlet": "^1.5.8",
    "@types/throttle-debounce": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-define-config": "^2.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
